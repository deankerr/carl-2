{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  // vscode/prettier bug workaround https://github.com/prettier/prettier-vscode/issues/3019
  "prettier.prettierPath": "./node_modules/prettier",
  // barrel generator
  "exportall.config.folderListener": ["/src/engine/system"],
  "exportall.config.semis": false
}
